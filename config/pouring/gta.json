{
    "name": "GTA",
    "n_gpu": 1,
    "seed": 1,
    "img_size": 224,
    "use_amp": true,
    "type": "GTA",

    "arch": {
        "type": "ResNet50_Conv2",
        "l2_normalize": true,
        "embedding_size": 128
    },
    "data_loader": {
        "type": "Pouring",
        "data_dir": "../datasets/pouring",
        "batch_size": 2,
        "ssl": true,
        "shuffle": true,
        "num_workers": 2,
        "num_steps": 64,
        "num_frames": 64,
        "num_context_steps": 2,
        "num_contexts": 2,
        "context_stride": 15,
        "frame_stride": 16,
        "sampling": "time_augment",
        "sampling_region": 1.5,
        "consistent_offset": 0.2,
        "positive_range": 10,
        "negative_range": 30,
        "tcn_multiply": 4,
        "random_offset": 1
    },
    "augmentation": {
        "brightness": true,
        "brightness_delta": 0.2,
        "contrast": true,
        "contrast_delta": 0.5,
        "saturation": false,
        "saturation_delta": 0,
        "hue": false,
        "hue_delta": 0,
        "random_flip": true,
        "random_crop": false,
        "strength": 1.0
    },
    "loss": {
        "type": "gta_loss",
        "alignment_type": "D2TW_consistency",
        "similarity_type": "cosine",
        "label_smoothing": 0.1,
        "softning": "dtw_prob",
        "gamma_s": 0.1,
        "gamma_f": 0.1
    },
    "optimizer": {
        "type": "Adam",
        "grad_clip": 10,
        "scheduler_type": "fixed",
        "lr": 1e-04,
        "momentum": 0.9,
        "weight_decay": 1e-05
    },
    "trainer": {
        "epochs": 200,
        "log_interval": 10,
        "log_summary": true,

        "resume": false,
        "log_dir": "saved/logs/",
        "save_dir": "saved/models/",
        "loguru_dir": "saved/loguru/",
        "resume_model": "model_final.pth",

        "tensorboard": true
    },
    "eval": true
}
